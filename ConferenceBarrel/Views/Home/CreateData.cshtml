@{
    ViewData["Title"] = "Contact";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<form class="form-horizontal" action="/api/todo/" method="POST" id="formCreate">
  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Supplier:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="supplier" id="supplier">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Year:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="year" id="year">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="pwd">Spend:</label>
    <div class="col-sm-10"> 
      <input type="text" class="form-control" name="spend" id="spend">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="pwd">Quantity:</label>
    <div class="col-sm-10"> 
      <input type="text" class="form-control" name="quantity" id="quantity">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="pwd">No Of Products:</label>
    <div class="col-sm-10"> 
      <input type="text" class="form-control"  name="no_of_products" id="no_of_products">
    </div>
  </div>
  <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" id="btnSubmit">Submit</button>
    </div>
  </div>
</form>

<script>
    $(document).ready(function(){
        $('#formCreate').submit(function () {

            $.ajax({
                url: '/api/todo/',
                type: "POST",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                data: 
                    JSON.stringify({
                    supplier: $('#supplier').val(),
                    year: $('#year').val(),
                    spend: $('#spend').val(),
                    quantity: $('#quantity').val(),
                    no_of_products: $('#no_of_products').val()
                }),
                success: function (result) {

                    alert("Success ");
                },
                error: function (result) {
                    alert("Failed");
                }
            });
          return false;
        });
    })
</script>